{% extends 'base.html.twig' %}

{% block body %}
    <h1>Foire</h1>

    <table>
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ foire.identifiant }}</td>
            </tr>
            <tr>
                <th>Nomfoire</th>
                <td>{{ foire.NomFoire }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if foire.DateDebut %}{{ foire.DateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if foire.DateFin %}{{ foire.DateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nombredestand</th>
                <td>{{ foire.NombreDeStand }}</td>
            </tr>
            <tr>
                <th>Prixdustand</th>
                <td>{{ foire.PrixDuStand }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('foire_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('foire_edit', { 'identifiant': foire.identifiant }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

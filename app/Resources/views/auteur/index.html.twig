{% extends 'back/base.html.twig' %}

{% block content %}
    <center>
    <h1>liste des auteurs</h1>
    <table border="1">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Prenom</th>
                <th>Date de naissance</th>
                <th>Nationalite</th>

            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>

                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{% if auteur.datenaissance %}{{ auteur.datenaissance|date('Y-m-d') }}{% endif %}</td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('auteur_show', { 'id': auteur.id }) }}">afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('auteur_edit', { 'id': auteur.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('auteur_new') }}">ajouter un nouveau auteur</a>
        </li>
    </ul>
    </center>
{% endblock %}
